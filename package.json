{
  "name": "hostbridge",
  "displayName": "Hostbridge",
  "description": "Adds a GUI for retrieving, uploading, and compiling hostbridge scripts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.make",
    "onCommand:extension.exec"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".hbx"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.make",
          "group": "navigation",
          "when": "resourceLangId == javascript"
        },
        {
          "command": "extension.exec",
          "group": "navigation",
          "when": "resourceLangId == javascript"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.make",
        "title": "Make Script"
      },
      {
        "command": "extension.exec",
        "title": "Exec Script"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Hostbridge",
      "properties": {
        "hostbridge.host": {
          "type": "string",
          "default": "***REMOVED***",
          "description": "Specifies the machine name or IP address of the host."
        },
        "hostbridge.port": {
          "type": "string",
          "enum": [
            "***REMOVED***",
            "***REMOVED***"
          ],
          "default": [
            "***REMOVED***"
          ],
          "description": "Specifies the port of the CICS region."
        },
        "hostbridge.userid": {
          "type": "string",
          "default": "***REMOVED***",
          "description": "Specifies the CESN/RACF userid to login with."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.34"
  },
  "dependencies": {
    "@types/request-promise-native": "^1.0.16",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  }
}
