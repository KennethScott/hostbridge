{
  "name": "hostbridge",
  "displayName": "Hostbridge",
  "description": "Adds a GUI for retrieving, uploading, and compiling hostbridge scripts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.helloWorld",
    "onCommand:extension.make",
    "onCommand:extension.exec"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "extension.helloWorld",
          "group": "navigation",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "extension.make",
          "group": "navigation",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "extension.exec",
          "group": "navigation",
          "when": "resourceLangId == markdown"
        }          
      ]
    },
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.make",
        "title": "Make Script"
      },
      {
        "command": "extension.exec",
        "title": "Exec Script"
      }         
    ],
    "configuration": {
      "type": "object",
      "title": "Hostbridge configuration",
      "properties": {
        "hostbridge.host": {
            "type": "string",
            "default": "***REMOVED***",
            "description": "Specifies the machine name or IP address of the host."
        }
      }
    }    
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  }
}
