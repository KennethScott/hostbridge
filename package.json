{
  "name": "hostbridge",
  "displayName": "Hostbridge",
  "description": "Adds a GUI for retrieving, uploading, and compiling hostbridge scripts",
  "version": "0.2.0",
  "enableProposedApi": true,
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onCommand:extension.make",
    "onCommand:extension.exec",
    "onCommand:hostView.getRepositoryContents",
    "onCommand:hostView.refresh",
    "onCommand:extension.updateCurrentRegion",
    "onCommand:extension.updateCurrentRepository",
    "onCommand:hostView.delete",
    "onCommand:hostView.getFile",    
    "onView:hostView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "hostView",
          "name": "Host View"
        }
      ]
    },
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".hbx"
        ]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.make",
          "group": "yy_hostbridge",
          "when": "resourceExtname == .hbx"
        },
        {
          "command": "extension.exec",
          "group": "yy_hostbridge",
          "when": "resourceExtname == .hbx"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.make",
          "group": "yy_hostbridge",
          "when": "resourceExtname == .hbx"
        },
        {
          "command": "extension.exec",
          "group": "yy_hostbridge",
          "when": "resourceExtname == .hbx"
        }
      ],
      "view/title": [
        {
            "command": "hostView.refresh",
            "when": "view == hostView",
            "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hostView.delete",
          "when": "view == hostView && viewItem == content"
        },
        {
          "command": "hostView.getFile",
          "when": "view == hostView && viewItem == content"
        }
      ]      
    },
    "commands": [
      {
        "command": "extension.make",
        "title": "Make"
      },
      {
        "command": "extension.exec",
        "title": "Execute"
      },
      {
        "command": "hostView.getRepositoryContents",
        "title": "Get Repository Contents"
      },
      {
        "command": "hostView.delete",
        "title": "Delete"
      },   
      {
        "command": "hostView.getFile",
        "title": "Get"
      },           
      {
        "command": "hostView.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh_light.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "extension.updateCurrentRegion",
        "title": "CICS Region"
      },
      {
        "command": "extension.updateCurrentRepository",
        "title": "Repository"
      },
      {
        "command": "hostView.reveal",
        "title": "Host View: Reveal"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Hostbridge",
      "properties": {
        "hostbridge.host": {
          "type": "string",
          "default": "***REMOVED***",
          "description": "Specifies the machine name or IP address of the host."
        },
        "hostbridge.userid": {
          "type": "string",
          "default": "***REMOVED***",
          "description": "Specifies the CESN/RACF userid to login with."
        },
        "hostbridge.regions": {
          "type": "array",
          "description": "All available CICS Regions.",
          "items": {
            "type": "object",
            "title": "CICS Region",
            "properties": {
              "name": {
                "type": "string",
                "description": "CICS Region Name"
              },
              "port": {
                "type": "number",
                "description": "CICS Region Port#"
              }
            }
          }
        },
        "hostbridge.currentRegion": {
          "type": "object",
          "description": "Specifies the current CICS Region.",
          "title": "Current CICS Region",
          "properties": {
            "name": {
              "type": "string",
              "description": "CICS Region Name"
            },
            "port": {
              "type": "number",
              "description": "CICS Region Port#"
            }
          }
        },
        "hostbridge.repositories": {
          "type": "array",
          "description": "All available repositories.",
          "items": {
            "type": "object",
            "title": "Repository",
            "properties": {
              "name": {
                "type": "string",
                "description": "Repository Name"
              }
            }
          }
        },
        "hostbridge.currentRepository": {
          "type": "object",
          "description": "Specifies the current repository.",
          "title": "Current Repository",
          "properties": {
            "name": {
              "type": "string",
              "description": "Repository Name"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "tslint": "^5.17.0",
    "typescript": "^3.3.1",
    "vscode": "^1.1.34"
  },
  "dependencies": {
    "@types/request-promise-native": "^1.0.16",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "xml2js": "^0.4.19"
  }
}
